@page
@using WebApiDocumentator.Razor.Areas.Docs.Pages
@model WebApiDocumentator.Razor.Areas.Docs.Pages.IndexModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Web API Documentator</title>
    <style>
        body {
            display: flex;
            font-family: sans-serif;
            margin: 0;
        }

        #sidebar {
            width: 250px;
            background: #f2f2f2;
            padding: 10px;
            overflow-y: auto;
            height: 100vh;
        }

        #content {
            flex: 2;
            padding: 20px;
        }

        #examples {
            flex: 1;
            padding: 20px;
            background: #fafafa;
            border-left: 1px solid #ccc;
        }

        h2 {
            margin-top: 0;
        }

        .endpoint {
            margin-bottom: 10px;
        }

        .http-method {
            font-weight: bold;
            color: #0066cc;
        }

    </style>
</head>
<body>
    <div id="sidebar">
        <h3>Endpoints</h3>
        <ul>
            @foreach(var group in Model.Groups)
            {
                <li>
                    <strong>@group.PathPrefix</strong>
                    <ul>
                        @foreach(var endpoint in group.Endpoints)
                        {
                            <li>@endpoint.HttpMethod @endpoint.Route</li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>

    <div id="content">
        <h2>Documentación</h2>
        @foreach(var group in Model.Groups)
        {
            <h3>@group.PathPrefix</h3>
            @foreach(var endpoint in group.Endpoints)
            {
                <div class="endpoint">
                    <div class="http-method">@endpoint.HttpMethod</div>
                    <div><strong>Ruta:</strong> @endpoint.Route</div>
                    <div><strong>Descripción:</strong> @endpoint.Summary</div>
                    <div><strong>Retorno:</strong> @endpoint.ReturnType</div>
                    @if(endpoint.Parameters.Any())
                    {
                        <div>
                            <strong>Parámetros:</strong>
                            <ul>
                                @foreach(var param in endpoint.Parameters)
                                {
                                    <li>@param.Name : @param.Type (FromBody: @param.IsFromBody)</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            }
        }
    </div>

    <div id="examples">
        <h3>Ejemplos</h3>
        <p>(Aquí se podrían mostrar ejemplos en C#, CURL, etc. más adelante)</p>
    </div>
</body>
</html>
